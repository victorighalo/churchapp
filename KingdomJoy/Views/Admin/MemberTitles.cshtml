@model KingdomJoy.Models.NewTitleViewModel


@{
    ViewBag.Title = "Member Titles";
}
<div class="br-pageheader">
    <nav class="breadcrumb pd-0 mg-0 tx-12">
        @Html.ActionLink("Dashboard", "Index", "Home", null, new { @class = "breadcrumb-item" })
        <span class="breadcrumb-item active">Member Titles</span>
    </nav>
</div>
<div class="br-pagetitle">
    <i class="icon icon ion-ios-bookmarks-outline"></i>
    <div>
        <h4>Member Titles</h4>
        <p class="mg-b-0">Manage Member Titles</p>
    </div>
</div>

<div class="br-pagebody">
    <div class="br-section-wrapper">
        <div class="form-layout">

            @using (Html.BeginForm("MemberTitles", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <h4>Create Member Title</h4>
                <hr />

                if (ViewBag.status != null)
                {
                    if (ViewBag.status == true)
                    {
                        <div class="alert alert-success">
                            <h3>Success!</h3>
                            <p>@ViewBag.message</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <h3>Error!</h3>
                            <p>@ViewBag.message</p>
                        </div>
                    }
                }
                <div class="row mg-b-25">
                    <div class="col-lg-4">
                        <div class="form-group">

                            @Html.LabelFor(model => model.MemberTitle.Name, htmlAttributes: new { @class = "form-control-label" })

                            @Html.EditorFor(model => model.MemberTitle.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MemberTitle.Name, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <div class="form-layout-footer">
                                <input type="submit" value="Create" class="btn btn-info" />
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>

        <div>
            <table class="table table-bordered table-primary">
                <thead class="thead-colored thead-primary">
                    <tr>
                        <th>Title</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.MemberTitles)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                <div class="dropdown">
                                    <a href="" class="tx-gray-800 d-inline-block" data-toggle="dropdown">
                                        Actions  <i class="fa fa-angle-down mg-l-10"></i>
                                    </a>
                                    <div class="dropdown-menu pd-10 wd-50">
                                        <nav class="nav nav-style-1 flex-column">
                                            @Html.ActionLink("Edit", "EditTitle", new { id = item.Id, @class = "nav-link" })
                                            @Html.ActionLink("Delete", "DeleteTitle", new { id = item.Id, @class = "nav-link" })
                                        </nav>
                                    </div>
                                </div>

                            </td>
                        </tr>

                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

